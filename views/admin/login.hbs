<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <div class="col-5 m-auto" style="margin-left:240px">
                <script src="https://cdn.lordicon.com/pzdvqjsp.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/zeabctil.json"
    trigger="loop"
    colors="outline:#121331,primary:#c71f16,secondary:#ebe6ef"
    style="width:150px;height:150px">
</lord-icon>
            </div>
            <h2 class="text-center">Admin Login</h2>
            <form action="/admin/adminLogin" method="post">
            {{#if loginErr}}
            <p class="error">Invalid admin name or password</p>
            {{/if}}
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter admin email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Password">
                </div>
                 <a href="adminSignup" hidden>Create new account ?</a>


                <button type="submit" class="btn btn-primary float-right">Login</button>
            </form>
             
        </div>
        <a href="/login">
        <div class="user-mode" style="margin-top:140px; margin-right:300px;">
            <button type="submit" class="btn btn-info float-right">User mode</button>
        </div>
        </a>
    </div>
</div>
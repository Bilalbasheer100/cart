<script src="https://cdn.lordicon.com/pzdvqjsp.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/pqxdilfs.json"
    trigger="loop"
    colors="outline:#131432,primary:#606874,secondary:#66d7ee,tertiary:#000000"

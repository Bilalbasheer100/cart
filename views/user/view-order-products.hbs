<section>
    <div class="container mt-5">
        <div class="col-9 col-md-4 m-auto" style="margin-left:400px ;">
            <script src="https://cdn.lordicon.com/pzdvqjsp.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/myroguwc.json"
    trigger="loop"
    style="width:100px;height:100px">
</lord-icon>
<script src="https://cdn.lordicon.com/pzdvqjsp.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/mxddzdmt.json"
    trigger="loop"
    style="width:100px;height:100px">
</lord-icon>
<script src="https://cdn.lordicon.com/pzdvqjsp.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/osvvqecf.json"
    trigger="loop"
    style="width:100px;height:100px">
</lord-icon>
        </div>
        <div class="col-6 col-md-3 m-auto" style="margin-left: 460px;">
            <h2>PRODUCTS</h2>
        </div>
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card bg-light" style="width:15rem; height:24rem">
                    <img class="card-img-top"
                    src="/product-images/{{this.product._id}}.jpeg"
                    alt="Card image cap"
                    style="height:12rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.Name}}</h5>
                        <p class="card-text">Rs.{{this.product.Price}}</p>
                        <p class="card-text">Quantity:{{this.quantity}}</p>
                        <p class="card-text">{{this.Description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

